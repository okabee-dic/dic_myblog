<!DOCTYPE html>
<html>
  <head>
    <title>Sample</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="bodyContainer">
    <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
        <span class="sr-only">ブログ</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <!-- <a class="navbar-brand" href="#">ブログ</a> -->
      <%= link_to "ブログ" , blogs_path ,{ :class => "navbar-brand" } %>
    </div>
    <div id="gnavi" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <% if logged_in? %>
        <% current_user %>
        <li><%= link_to "新規作成" , new_blog_path %></li>
        <li><%= link_to "ログアウト" , session_path(@current_user), method: :delete %></li>
        <li><a href="">menu2</a></li>
        <% else %>
        <li><%= link_to "ログイン" , new_session_path %></li>
        <li><%= link_to "新規登録" , new_user_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
    <%= yield %>
    
    <footer>
      Copyright(C) 2018- my blog 
    </footer>
    </div> <!-- bodyContainer -->
  </body>
</html>
